<h1><%= @question.title %></h1>
<p><%= @question.body %></p>
<%= render 'shared/errors', resource: @answer %>
<%= form_with model: [@question, @answer] do |f| %>
  <%= f.label :body, 'Your answer' %>
  <%= f.text_area :body %>
  <%= f.submit 'Answer' %>
<% end %>

<ul>
  <% @question.answers.each do |a| %>
  <li>
    <%= a.body %>
  </li>
  <% end %>
</ul>
