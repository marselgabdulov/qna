<div class='question'>
  <%= render 'question' %>
</div>

<ul class='answers'>
  <%= render @question.answers.sort_by_best %>
</ul>

<%= form_with model: [@question, @answer], class: 'new-answer', local: false do |f| %>
  <%= f.label :body, 'Your answer' %>
  <%= f.text_area :body %>
  <%= f.submit 'Create Answer' %>
<% end %>
