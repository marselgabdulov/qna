<%= form_with model: @question, class: 'new-question', local: false do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.label :files %>
  <%= f.file_field :files, multiple: true, direct_upload: true %>
  <%= f.submit 'Save' %>
<% end %>
