<li>
  <p><%= answer.body %></p>

  <div class='answer-errors'>
    <%= render 'shared/errors', resource: answer %>
  </div>

  <% if current_user == answer.user %>
    <p><%= link_to 'Edit Answer', '#', class: 'edit-answer-link', data: { answer_id: answer.id } %></p>
    <p><%= link_to 'Delete Answer', answer, method: :delete, confirm: 'Are you sure?' %></p>
  <% end %>
</li>


<%= form_with model: answer, class: 'hidden', html: { id: "edit-answer-#{answer.id}"  }, local: false do |f| %>
  <%= f.label :body, 'Your answer' %>
  <%= f.text_area :body %>
  <%= f.submit 'Save' %>
<% end %>
